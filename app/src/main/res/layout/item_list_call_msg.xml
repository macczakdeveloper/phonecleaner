<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_card_background"
        android:descendantFocusability="afterDescendants"
        android:padding="10dp">

        <ImageView
            android:id="@+id/list_item_entry_drawable"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/list_item_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_prueba_nombre"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/list_item_entry_drawable"
            android:layout_marginBottom="3dp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_item_entry_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/checkBox_ram"
            android:singleLine="true"
            android:text="0"
            android:textColor="#F16521"
            android:layout_marginRight="5dp"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox_ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:clickable="false"
            android:button="@drawable/selector_check_box"
            android:focusableInTouchMode="false"
            android:layout_marginRight="10dp"
            android:text="" />
    </RelativeLayout>

</FrameLayout>